@model IEnumerable<WebStore2.Web.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h2>Список товаров</h2>

<table class="table">
    <tr>
        <td><b>Наименование</b></td>
        <td><b>Категория</b></td>
        <td><b>Цена руб. (100 г)</b></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Category</td>
            <td>@item.Price</td>
        </tr>
    }
</table>