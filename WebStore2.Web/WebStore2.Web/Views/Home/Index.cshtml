@model IEnumerable<WebStore2.Web.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h2>Список товаров</h2>

<table class="table">
    <tr>
        <td><b>Наименование</b></td>
        <td><b>Категория</b></td>
        <td><b>Цена руб. (100 г)</b></td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Category</td>
            <td>@item.Price</td>
            <td><a href="@Url.Action("Remove", "Home", new { id = @item.id })">Удалить</a></td>
        </tr>
    }
</table>

<br />

<a class="btn btn-success" href="@Url.Action("AddProduct")" role="button">Добавить товар</a>
<br />
<br />

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <fieldset>
        <label for="CategoryType">Категории</label>
        @Html.DropDownList("CategoryType")
        <br />
        <br />
        <p><input type="submit" value="Применить фильтр" class="btn btn-default" /></p>
    </fieldset>
}
